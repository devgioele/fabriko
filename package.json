{
  "name": "modern-typescript-action",
  "version": "0.0.0",
  "private": true,
  "description": "Modern GitHub Action template",
  "main": "src/index.ts",
  "scripts": {
    "lint": "eslint '**/*.ts' --cache --fix",
    "test": "jest",
    "build": "rm -rf dist && esbuild src/index.ts --outfile=dist/index.js --bundle --platform=node --target=node16 --minify --sourcemap && cp dist-reuse/* dist/",
    "dev": "yarn test && yarn build && act -j test-run --secret-file .secrets"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devgioele/modern-typescript-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.6.0"
  },
  "devDependencies": {
    "@swc/core": "^1.2.197",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.40",
    "esbuild": "^0.14.42",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-github": "^4.3.6",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "js-yaml": "^4.1.0",
    "prettier": "^2.6.2",
    "typescript": "^4.7.3"
  },
  "packageManager": "yarn@3.2.1"
}
